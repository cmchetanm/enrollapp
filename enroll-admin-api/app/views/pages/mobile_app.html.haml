- content_for :title, notice || alert || 'Download the Enroll mobile app for iOS or Android.'

.grid-x.align-center
  .medium-10.large-6.cell.text-center
    %p= image_tag 'logo.png', width: 150

    .margin-top-3.margin-bottom-3.callout{class: alert.present? ? 'alert' : ''}
      - if alert.present?
        %h3= alert
      - elsif notice.present?
        %h3= notice
        %p Please login to Enroll on your mobile device.
      - else
        %p.lead Please login to Enroll on your mobile device.
    .grid-x.grid-margin-x.align-spaced
      .auto.cell
        = link_to APP[:ios_url] do
          %img{src: '/email/app-store-badge.png', alt: 'App Store Badge'}
      .auto.cell
        = link_to APP[:android_url] do
          %img{src: '/email/google-play-badge.png', alt: 'Google Play Badge'}