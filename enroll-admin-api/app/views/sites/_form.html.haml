= form_for site, remote: true, authenticity_token: true do |f|
  - if site.errors.any?
    .error-explanation
      %h2 #{pluralize(site.errors.count, 'error')} prohibited this site from being saved:
      %ul
        - site.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name, autofocus: true
  .button-group
    = link_to 'Cancel', sites_path, class: 'secondary button'
    = f.submit class: 'button'