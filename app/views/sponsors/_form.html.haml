= form_for sponsor, remote: true, authenticity_token: true do |f|
  - if sponsor.errors.any?
    .error-explanation
      %h2 #{pluralize(sponsor.errors.count, 'error')} prohibited this sponsor from being saved:
      %ul
        - sponsor.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name, autofocus: true
  .field
    = f.label :contact
    = f.text_field :contact
  .field
    = f.label :email
    = f.text_field :email
  .button-group
    = link_to 'Cancel', sponsor.new_record? ? sponsors_path : sponsor, class: 'secondary button'
    = f.submit class: 'button'
